{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "npm run build",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Start",
            "type": "shell",
            "command": "npm start",
            "problemMatcher": [
                "$node-sass"
            ]
        },
        {
            "label": "Test: All",
            "type": "shell",
            "command": "npm test",
            "problemMatcher": [
                "$node-sass"
            ]
        },
        {
            "label": "Test: Unit",
            "type": "shell",
            "command": "npm test --path ./src/tests/unit",
            "problemMatcher": [
                "$node-sass"
            ]
        },
        {
            "label": "Test: Integration",
            "type": "shell",
            "command": "npm test --path ./src/tests/integration",
            "problemMatcher": [
                "$node-sass"
            ]
        },
        {
            "label": "Clear",
            "type": "shell",
            "command": "clear",
        }
    ]
}