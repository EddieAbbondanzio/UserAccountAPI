{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "npm run build",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build: Continous Watch",
            "type": "shell",
            "command":"tsc --w",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build"
        },
        {
            "label": "Start: Dev",
            "type": "shell",
            "command": "npm start dev",
            "problemMatcher": [
                "$node-sass"
            ]
        },
        {
            "label": "Start: Test",
            "type": "shell",
            "command": "npm start test",
            "problemMatcher": [
                "$node-sass"
            ]
        },
        {
            "label": "Start: Production",
            "type": "shell",
            "command": "npm start prod",
            "problemMatcher": [
                "$node-sass"
            ]
        },
        {
            "label": "Test: All",
            "type": "shell",
            "command": "npm test",
            "group": "test",
            "problemMatcher": [
                "$node-sass"
            ]
        },
        {
            "label": "Test: Unit",
            "type": "shell",
            "command": "npm test --path ./src/tests/unit",
            "group": "test",
            "problemMatcher": [
                "$node-sass"
            ]
        },
        {
            "label": "Test: Integration",
            "type": "shell",
            "command": "npm test --path ./src/tests/integration",
            "group": "test",
            "problemMatcher": [
                "$node-sass"
            ]
        }
    ]
}